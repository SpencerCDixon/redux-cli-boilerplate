{
  "parser": "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "babel"
  ],
  "env"     : {
    "browser": true
  },
  "globals" : {
    "__DEV__": false,
    "__PROD__": false,
  },
  "rules": {
    "semi" : [2, "always"],
    "max-len": [2, 120, 2],
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 1,
    "space-before-function-paren": [2, "never"],
    "comma-dangle": [2, "always-multiline"],
  },
}
